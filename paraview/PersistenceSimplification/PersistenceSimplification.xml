
<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy 
     name="PersistenceSimplification" 
     class="ttkPersistenceSimplification" 
     label="TTK PersistenceSimplification">
     <Documentation
        long_help="TTK persistenceSimplification plugin."
        short_help="TTK persistenceSimplification plugin.">
          TTK persistenceSimplification plugin documentation.
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <InputArrayDomain name="input_scalars" number_of_components="1">
          <Property name="Input" function="FieldDataSelection" />
        </InputArrayDomain>
        <Documentation>
          Data-set to process.
        </Documentation>
      </InputProperty>

      <StringVectorProperty
        name="ScalarField"
        command="SetScalarField"
        number_of_elements="1"
        animateable="0"
        label="Scalar Field"
        >
        <ArrayListDomain
          name="array_list"
          default_values="0">
          <RequiredProperties>
            <Property name="Input" function="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>
          Select the scalar field to process.
        </Documentation>
      </StringVectorProperty>

      <!-- TODO_RC -->

      <IntVectorProperty
         name="AutoOption"
         label="Automatic Threshold"
         command="SetAutoOption"
         number_of_elements="1"
         default_values="1">
        <BooleanDomain name="bool"/>
         <Documentation>
          Some option for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
         name="DistinctOption"
         label="Seperate Max/Min"
         command="SetDistinctOption"
         number_of_elements="1"
         default_values="1">
        <BooleanDomain name="bool"/>
         <Documentation>
          Some option for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
         name="UseMinOption"
         label="Use Min Pairs"
         command="SetUseMinOption"
         number_of_elements="1"
         default_values="1">
        <BooleanDomain name="bool"/>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="1" />
        </Hints>
         <Documentation>
          Some option for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
         name="UseMaxOption"
         label="Use Max Pairs"
         command="SetUseMaxOption"
         number_of_elements="1"
         default_values="1">
        <BooleanDomain name="bool"/>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="1" />
        </Hints>
         <Documentation>
          Some option for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
         name="CountMinOption"
         label="Threshold Min Pairs by Number"
         command="SetCountMinOption"
         number_of_elements="1"
         default_values="1">
        <BooleanDomain name="bool"/>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="1" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AutoOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="UseMinOption"
            value="1" />
        </Hints>
         <Documentation>
          Some option for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
         name="CountMaxOption"
         label="Threshold Max Pairs by Number"
         command="SetCountMaxOption"
         number_of_elements="1"
         default_values="1">
        <BooleanDomain name="bool"/>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="1" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AutoOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="UseMaxOption"
            value="1" />
        </Hints>
         <Documentation>
          Some option for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
         name="CountAllOption"
         label="Threshold Pairs by Number"
         command="SetCountAllOption"
         number_of_elements="1"
         default_values="1">
        <BooleanDomain name="bool"/>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AutoOption"
            value="0" />
        </Hints>
         <Documentation>
          Some option for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
         name="CountMinArg"
         label="Number of Min Pairs"
         command="SetCountMinArg"
         number_of_elements="1"
         default_values="1" >
        <IntRangeDomain name="range" min="0" max="100" />
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="1" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="CountMinOption"
            value="1" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AutoOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="UseMinOption"
            value="1" />
        </Hints>
         <Documentation>
           Integer argument for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>
      
      <IntVectorProperty
         name="CountMaxArg"
         label="Number of Max Pairs"
         command="SetCountMaxArg"
         number_of_elements="1"
         default_values="1" >
        <IntRangeDomain name="range" min="0" max="100" />
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="1" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="CountMaxOption"
            value="1" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AutoOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="UseMaxOption"
            value="1" />
        </Hints>
         <Documentation>
           Integer argument for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>
      
      <IntVectorProperty
         name="CountAllArg"
         label="Number of Pairs"
         command="SetCountAllArg"
         number_of_elements="1"
         default_values="1" >
        <IntRangeDomain name="range" min="0" max="100" />
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="CountAllOption"
            value="1" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AutoOption"
            value="0" />
        </Hints>
         <Documentation>
           Integer argument for the persistenceSimplification filter.
         </Documentation>
      </IntVectorProperty>

      <DoubleVectorProperty
         name="PersistenceMinArg"
         label="Min Pairs Persistence Threshold"
         command="SetPersistenceMinArg"
         number_of_elements="1"
         default_values="1" >
        <DoubleRangeDomain name="range" min="0" max="100" />
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="1" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="CountMinOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AutoOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="UseMinOption"
            value="1" />
        </Hints>
         <Documentation>
          Double argument for the persistenceSimplification filter.
         </Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty
         name="PersistenceMaxArg"
         label="Max Pairs Persistence Threshold"
         command="SetPersistenceMaxArg"
         number_of_elements="1"
         default_values="1" >
        <DoubleRangeDomain name="range" min="0" max="100" />
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="1" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="CountMaxOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AutoOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="UseMaxOption"
            value="1" />
        </Hints>
         <Documentation>
          Double argument for the persistenceSimplification filter.
         </Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty
         name="PersistenceAllArg"
         label="Persistence Threshold"
         command="SetPersistenceAllArg"
         number_of_elements="1"
         default_values="1" >
        <DoubleRangeDomain name="range" min="0" max="100" />
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="DistinctOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="CountAllOption"
            value="0" />
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AutoOption"
            value="0" />
        </Hints>
         <Documentation>
          Double argument for the persistenceSimplification filter.
         </Documentation>
      </DoubleVectorProperty>
      
      <IntVectorProperty
         name="UseAllCores"
         label="Use All Cores"
         command="SetUseAllCores"
         number_of_elements="1"
         default_values="1" panel_visibility="advanced">
        <BooleanDomain name="bool"/>
         <Documentation>
          Use all available cores.
         </Documentation>
      </IntVectorProperty>
      
      <IntVectorProperty
         name="ThreadNumber"
         label="Thread Number"
         command="SetThreadNumber"
         number_of_elements="1"
         default_values="1" panel_visibility="advanced">
        <IntRangeDomain name="range" min="1" max="100" />
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="UseAllCores"
            value="0" />
        </Hints>
         <Documentation>
          Thread number.
         </Documentation>
      </IntVectorProperty>
      
      <IntVectorProperty
         name="DebugLevel"
         label="Debug Level"
         command="SetdebugLevel_"
         number_of_elements="1"
         default_values="3" panel_visibility="advanced">
        <IntRangeDomain name="range" min="0" max="100" />
         <Documentation>
           Debug level.
         </Documentation>
      </IntVectorProperty>
      
      <PropertyGroup panel_widget="Line" label="Input options">
        <Property name="ScalarField" />
      </PropertyGroup>
     
      <PropertyGroup panel_widget="Line" label="Threshold options">
        <Property name="AutoOption" />
        <Property name="DistinctOption" />
        <Property name="UseMinOption" />
        <Property name="UseMaxOption" />
        <Property name="CountMinOption" />
        <Property name="CountMaxOption" />
        <Property name="CountAllOption" />
        <Property name="CountMinArg" />
        <Property name="CountMaxArg" />
        <Property name="CountAllArg" />
        <Property name="PersistenceMinArg" />
        <Property name="PersistenceMaxArg" />
        <Property name="PersistenceAllArg" />
      </PropertyGroup>
      
      <PropertyGroup panel_widget="Line" label="Testing">
        <Property name="UseAllCores" />
        <Property name="ThreadNumber" />
        <Property name="DebugLevel" />
      </PropertyGroup>
      
      <Hints>
        <ShowInMenu category="TTK - Misc" />
      </Hints>
   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>
